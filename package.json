{
  "name": "valentine2026",
  "version": "1.1.0",
  "description": "Happy Valentine's day <3",
  "scripts": {
    "clean": "rm -rf ./docs",
    "dev": "npm run build:site && npx @tailwindcss/cli -i ./src/input.css -o ./docs/styles.css --watch",
    "optimize:images": "node ./scripts/optimize-images.mjs",
    "optimize:images:avif": "ENABLE_AVIF=1 node ./scripts/optimize-images.mjs",
    "build:css": "npx @tailwindcss/cli -i ./src/input.css -o ./docs/styles.css --minify",
    "build:site": "mkdir -p ./docs && cp ./src/index.html ./docs/index.html && cp ./src/404.html ./docs/404.html && rm -rf ./docs/js && mkdir -p ./docs/js && cp -r ./src/js/. ./docs/js && rm -rf ./docs/assets && cp -r ./assets ./docs/assets && echo 'arabela.org' > ./docs/CNAME && touch ./docs/.nojekyll",
    "build": "npm run clean && npm run optimize:images && npm run build:css && npm run build:site",
    "preview": "node ./scripts/preview.mjs",
    "test:smoke": "npx playwright test tests/smoke.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jikovec/Valentine2026.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/jikovec/Valentine2026/issues"
  },
  "homepage": "https://github.com/jikovec/Valentine2026#readme",
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@tailwindcss/cli": "^4.1.18",
    "sharp": "^0.33.5",
    "tailwindcss": "^4.1.18"
  }
}
